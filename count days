#include <iostream>
#include <string>
#include <iomanip>
using namespace std;

const int SIZE = 12;

int main()
{
int days[SIZE], i;

days[0] = 31;
days[1] = 28;
days[2] = 31;
days[3] = 30;
days[4] = 31;
days[5] = 30;
days[6] = 31;
days[7] = 31;
days[8] = 30;
days[9] = 31;
days[10] = 30;
days[11] = 31;

string month[SIZE] = { "January","February","March","April","May","June","July","August","September","October","November","December" };

for (i = 0; i < SIZE; i++)
{

cout << month[i] << setw(3) << " is " << setw(3) << days[i] << "days" << endl;
}

return 0;
}
